<% layout("/layouts/boilerplate") %>
<div class="container my-4">
  <h2 class="text-center mb-4">Explore</h2>

  <% if (allListings.length === 0) { %>
    <p class="text-center text-danger"> No listings found!</p>
  <% } else { %>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
      <% for (let listing of allListings) { %>
        <div class="col">
          <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
            <div class="card shadow-sm h-100">
              <% 
                // compute a safe image src that handles several storage shapes and
                // validates the result so broken or empty values fall back to a placeholder.
                function extractUrl(candidate) {
                  if (!candidate) return null;
                  if (typeof candidate !== 'string') return null;
                  const m = candidate.match(/https?:\/\/[^")'\s]+/i);
                  if (m) return m[0];
                  return candidate && candidate.startsWith('http') ? candidate : null;
                }

                let imgSrc = null;
                imgSrc = extractUrl(listing.imageUrl) || (listing.image && extractUrl(listing.image.url)) || extractUrl(listing.image) || 'https://via.placeholder.com/400x300?text=No+Image';
              %>
              <img
                src="<%= imgSrc %>"
                class="card-img-top"
                alt="<%= listing.title %>"
                style="height: 200px; object-fit: cover;"
              />
              <div class="card-body">
                <h5 class="card-title fw-semibold"><%= listing.title %></h5>
                <p class="text-muted mb-1"><%= listing.location %>, <%= listing.country %></p>
                <p class="fw-bold">â‚¹<%= listing.price.toLocaleString("en-IN") %> / night</p>
              </div>
            </div>
          </a>
        </div>
      <% } %>
    </div>
  <% } %>
</div>
